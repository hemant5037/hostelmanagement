{
  "rewrites": [
    {
      "source": "/login",
      "destination": "/index.html"
    },
    {
      "source": "/doctor/addnew",
      "destination": "/index.html"
    },
    {
      "source": "/admin/addnew",
      "destination": "/index.html"
    },
    {
      "source": "/messages",
      "destination": "/index.html"
    },
    {
      "source": "/doctors",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://hostelmanagement-7p1h.vercel.app/"
  }
} 